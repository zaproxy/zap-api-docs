ruby '>=2.4.0'
source 'https://rubygems.org'

# Middleman
# Lock to 4.3.8 for now, 4.3.9 does not work correctly:
# https://github.com/middleman/middleman/issues/2375
gem 'middleman', '= 4.3.8'
gem 'middleman-syntax', '~> 3.2.0'
gem 'middleman-autoprefixer', '~> 2.10.1'
gem 'middleman-sprockets', '~> 4.1.1'
gem 'rouge', '~> 3.20.0'
gem 'redcarpet', '~> 3.5.1'
gem 'nokogiri', '~> 1.11.3'

# Lock sprockets/sass, newer version (4.0.0) uses sassc which leads to an error:
# "Error: File to import not found or unreadable: normalize."
gem 'sprockets', '= 3.7.2'
gem 'sass', '= 3.4.25'